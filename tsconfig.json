{
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"noEmitOnError": true,
	//	"noImplicitAny": true,
	//	"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
	//	"strictNullChecks": true,
		"target": "es5",
		"lib": [
			"es5"
		],
		"types": [
			"node"
		]
	},
	"exclude": [
		"node_modules",
		"tests"
	]
}
