{
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
	//	"noImplicitThis": true, conflict with jasmine, leave off until fixed
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es5",
		"experimentalDecorators": true,
		"lib": [
			"es5",
			"es6",
			"scripthost",
			"dom"
		]
	},
	"exclude": [
		"node_modules",
		"tests",
		"tmp"
	]
}
